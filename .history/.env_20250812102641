# Configuration du serveur
NODE_ENV=development
PORT=5000

# Configuration MongoDB Container (sans authentification)
MONGO_URI=mongodb://localhost:27017/contactkeeper

# Configuration MongoDB Container (avec authentification - décommentez si nécessaire)
# MONGO_URI=mongodb://admin:password123@localhost:27017/contactkeeper?authSource=admin

# Configuration JWT (ajoutez votre clé secrète)
JWT_SECRET=your_jwt_secret_key_here

# Configuration de l'application
APP_NAME=Contact Keeper API