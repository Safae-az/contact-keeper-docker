# Configuration du serveur
NODE_ENV=development
PORT=5000

# Configuration MongoDB 
# Pour Docker Compose (utilise le nom du service 'mongodb')
MONGO_URI=mongodb://mongodb:27017/contactkeeper

# Pour développement local (utilise localhost)
# MONGO_URI=mongodb://localhost:27017/contactkeeper

# Flag pour indiquer l'environnement Docker
DOCKER_ENV=true

# Configuration JWT (ajoutez votre clé secrète)
JWT_SECRET=your_jwt_secret_key_here

# Configuration de l'application
APP_NAME=Contact Keeper API